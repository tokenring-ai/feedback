{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": ".",
    "rootDir": ".",
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*.js"],
  "exclude": [
    "node_modules",
    "test",
    "tests",
    "vitest.config.js",
    "eslint.config.js"
  ]
}
